[Unit]
Description=Flower Celery Service

[Service]
User=root
Group=root
WorkingDirectory=/home/ubuntu/deploy/flaskapp
ExecStart=/home/ubuntu/deploy/flaskapp/virtual_env/bin/flower \
            --port=5555  \
            --loglevel=info \
            --app=app.celery \
            --address=0.0.0.0 \
            --log_file_prefix=/home/ubuntu/deploy/flaskapp/logs/flower

Restart=on-failure
Type=simple

[Install]
WantedBy=multi-user.target